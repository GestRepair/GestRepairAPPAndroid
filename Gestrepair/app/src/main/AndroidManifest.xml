<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipt.gestrepair">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--
     To auto-complete the email text field in the login form with the user's emails
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MainActivity2"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Service"
            android:label="@string/title_activity_services"
            android:parentActivityName=".ListServices"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Configurations"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListServices"
            android:label="@string/title_activity_list_services"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListVehicles"
            android:label="@string/title_activity_list_vehicles"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Schedule_Service"
            android:label="@string/title_activity_schedule__service"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListScheduleService"
            android:label="@string/title_activity_list_schedule_service"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListBudgets"
            android:label="@string/title_activity_list_budgets"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Budgets"
            android:label="@string/title_activity_budgets"
            android:parentActivityName=".ListBudgets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Budgets2"
            android:label="@string/title_activity_budgets"
            android:parentActivityName=".ListBudgets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Vehicle"
            android:label="@string/title_activity_vehicle"
            android:parentActivityName=".ListBudgets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListRepair"
            android:label="@string/title_activity_list_repair"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Repair"
            android:label="@string/title_activity_repair"
            android:parentActivityName=".ListRepair"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetScheduleService"
            android:label="@string/title_activity_set_schedule_service"
            android:parentActivityName=".ListScheduleService"
            android:screenOrientation="portrait" />
        <activity android:name=".About"></activity>
    </application>

</manifest>