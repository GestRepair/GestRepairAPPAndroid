<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.obscu.gestrepair5">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Service"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Configurations" />
        <activity android:name=".ListServices" />
        <activity
            android:name=".ListVehicles"
            android:label="@string/title_activity_list_vehicles"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Schedule_Service"
            android:label="@string/title_activity_schedule__service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListScheduleService"
            android:label="@string/title_activity_list_schedule_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListBudgets"
            android:label="@string/title_activity_list_budgets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Budgets"
            android:label="@string/title_activity_budgets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Vehicle"
            android:label="@string/title_activity_vehicle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListRepair"
            android:label="@string/title_activity_list_repair"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Repair"
            android:label="@string/title_activity_repair"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SetScheduleService"
            android:label="@string/title_activity_set_schedule_service"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>