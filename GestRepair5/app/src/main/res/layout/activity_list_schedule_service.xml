<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.obscu.gestrepair5.ListScheduleService">


    <android.support.v7.widget.Toolbar
        android:id="@+id/appBarLayout2"
        android:layout_width="464dp"
        android:layout_height="59dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.604" />

    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Reparações"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txtRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Title"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serviço"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistration"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Service"
        android:layout_marginLeft="38dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_CancelSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="199dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="87dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.526"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtRegistrationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Title"
        app:layout_constraintLeft_toRightOf="@+id/txtRegistration"
        android:layout_marginLeft="92dp" />

    <TextView
        android:id="@+id/txt_ServiceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistrationValue"
        app:layout_constraintLeft_toRightOf="@+id/txt_Service"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txtDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_ServiceValue"
        app:layout_constraintLeft_toRightOf="@+id/txtDate"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>
